<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@drawable/closet2gavetas"
	android:weightSum="1">
	<LinearLayout android:weightSum="1" android:layout_width="fill_parent"
		android:layout_height="260dp" android:orientation="horizontal">
		<LinearLayout android:weightSum="1"
			android:layout_gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:text="Cadastrar roupa"
				android:layout_height="46dp" android:layout_width="300dp"
				android:id="@+id/button_cadastrar_roupa" android:layout_gravity="center_horizontal"></Button>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:weightSum="1" android:layout_width="fill_parent"
		android:layout_height="48dp" android:orientation="horizontal">
		<LinearLayout android:weightSum="1"
			android:layout_gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:text="Ver roupas"
				android:layout_height="47dp" android:layout_width="300dp"
				android:id="@+id/button_ver_roupas" android:layout_gravity="center_horizontal"></Button>
		</LinearLayout>
	</LinearLayout>

	

</LinearLayout>