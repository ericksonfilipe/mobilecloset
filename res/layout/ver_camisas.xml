<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@drawable/background"
	android:weightSum="1">
	<LinearLayout android:weightSum="1" android:layout_width="fill_parent"
		android:layout_height="210dp" android:orientation="horizontal">
		<LinearLayout android:weightSum="1"
			android:layout_gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:background="@drawable/button_camisas_manga_comprida"
				android:layout_height="46dp" android:layout_width="300dp"
				android:id="@+id/button_camisas_manga_comprida" android:layout_gravity="center_horizontal"></Button>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:weightSum="1" android:layout_width="fill_parent"
		android:layout_height="48dp" android:orientation="horizontal">
		<LinearLayout android:weightSum="1"
			android:layout_gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:background="@drawable/button_camisas_manga_curta"
				android:layout_height="47dp" android:layout_width="300dp"
				android:id="@+id/button_camisas_manga_curta" android:layout_gravity="center_horizontal"></Button>
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:weightSum="1" android:layout_width="fill_parent"
		android:layout_height="48dp" android:orientation="horizontal">
		<LinearLayout android:weightSum="1"
			android:layout_gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:background="@drawable/button_camisas_sem_manga"
				android:layout_height="47dp" android:layout_width="300dp"
				android:id="@+id/button_camisas_sem_manga" android:layout_gravity="center_horizontal"></Button>
		</LinearLayout>
	</LinearLayout>
	
	

</LinearLayout>
